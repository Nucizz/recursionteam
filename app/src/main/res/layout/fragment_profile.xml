<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="15dp"
    android:paddingTop="30dp"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:background="@drawable/default_background"
    tools:context=".activities.fragment.HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:fontFamily="@font/poppins"
        android:gravity="left"
        android:text="PROFILE"
        android:textColor="@color/white_100"
        android:textFontWeight="600"
        android:textSize="32dp" />

    <View
        android:layout_width="65dp"
        android:layout_height="5dp"
        android:background="@color/acc_green" />

    <ImageView
        android:id="@+id/userDisplayPicture"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/default_display_picture"/>

    <TextView
        android:id="@+id/userUsername"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="User"
        android:textColor="@color/white_100"
        android:textFontWeight="600"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/userEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="user@example.com"
        android:textColor="@color/white_75"
        android:textFontWeight="400"
        android:textSize="18dp" />
    
    <LinearLayout
        android:id="@+id/buttonEditProfile"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:background="@drawable/ui_corner_15"
        android:backgroundTint="@color/black_75"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_person"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:includeFontPadding="false"
            android:text="Edit Profile"
            android:textColor="@color/white_100"
            android:textFontWeight="500"
            android:textSize="20dp" />
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonPurchaseHistory"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:background="@drawable/ui_corner_15"
        android:backgroundTint="@color/black_75"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_history"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:includeFontPadding="false"
            android:text="Purchase History"
            android:textColor="@color/white_100"
            android:textFontWeight="500"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonDebug"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:background="@drawable/ui_corner_15"
        android:backgroundTint="@color/black_75"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_debug"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:includeFontPadding="false"
            android:text="Initialize Debug"
            android:textColor="@color/case_error"
            android:textFontWeight="500"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLogout"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:background="@drawable/ui_corner_15"
        android:backgroundTint="@color/black_75"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_logout"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:includeFontPadding="false"
            android:text="Logout"
            android:textColor="@color/case_error"
            android:textFontWeight="500"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>